<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent"
                                     android:orientation="vertical"
    android:background="@color/colorMain">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_title_close"
            android:layout_width="120.0px"
            android:layout_height="120.0px"
            android:baselineAlignBottom="true"
            android:padding="10.0dip"
            android:src="@mipmap/title_close_icon"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="280.0px"
        android:layout_height="280.0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48.0px"
        android:layout_marginTop="48.0px"
        android:src="@mipmap/bazaar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@id/et_user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="账号"
            android:inputType="text"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            android:textSize="30.0px"/>

        <View
            android:layout_width="600.0px"
            android:layout_height="2.0px"
            android:layout_marginTop="5.0dip"
            android:background="@color/white"/>

        <EditText
            android:id="@id/et_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52.0px"
            android:background="@null"
            android:gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            android:textSize="30.0px"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_marginTop="5.0dip"
            android:background="@color/white"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45.0px"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_forgot"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="忘记密码"
                android:textColor="@color/txt_white"
                android:textSize="24.0px"/>

            <TextView
                android:id="@id/tv_reg"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="快速注册"
                android:textColor="@color/txt_white"
                android:textSize="24.0px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@id/tv_login"
            android:layout_width="300.0px"
            android:layout_height="120.0px"
            android:layout_marginTop="54.0px"
            android:background="@drawable/shape_reg_btn_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/txt_white"
            android:textSize="30.0px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@id/tv_social_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57.0px"
        android:gravity="center"
        android:text="用社交账号登录"
        android:textColor="@color/txt_white"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.0px"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_qq"
            android:layout_width="90.0px"
            android:layout_height="90.0px"
            android:layout_marginLeft="162.0px"
            android:src="@mipmap/login_qq"/>

        <ImageView
            android:id="@id/iv_wb"
            android:layout_width="90.0px"
            android:layout_height="90.0px"
            android:layout_marginLeft="78.0px"
            android:layout_marginRight="78.0px"
            android:src="@mipmap/login_wb"/>

        <ImageView
            android:id="@id/iv_wx"
            android:layout_width="90.0px"
            android:layout_height="90.0px"
            android:src="@mipmap/login_wx"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="495.0px"
        android:layout_height="78.0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="53.0px"
        android:layout_marginTop="53.0px"
        android:gravity="center"
        android:text="在您申请注册BAZAAR IN用户时,\n 即视为您不仅完全同意BAZAAR IN使用须知,\n 而且知悉且同意本注册用户特别须知。"
        android:textColor="@color/txt_white"
        android:textSize="22.0px"/>
</com.zhy.autolayout.AutoLinearLayout>