<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent"
                                     android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_title_back"
            android:layout_width="120.0px"
            android:layout_height="120.0px"
            android:baselineAlignBottom="true"
            android:padding="10.0dip"
            android:src="@mipmap/title_back_icon"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="280.0px"
        android:layout_height="280.0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48.0px"
        android:layout_marginTop="48.0px"
        android:src="@mipmap/bazaar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@id/ll_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_phone"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="手机账号"
                android:textColor="@color/txt_white"
                android:textSize="24.0px"/>

            <View
                android:layout_width="2.0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="80.0px"
                android:layout_marginRight="80.0px"
                android:background="@color/txt_white"/>

            <TextView
                android:id="@id/tv_mail"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left"
                android:text="邮箱账号"
                android:textColor="#ffdd6b81"
                android:textSize="24.0px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.0px"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_86"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/txt_white"
                android:textSize="35.0px"/>

            <View
                android:id="@id/v_divide"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="44.0px"
                android:layout_marginRight="18.0px"
                android:background="@color/txt_white"/>

            <EditText
                android:id="@id/et_user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/txt_white"
                android:textColorHint="@color/txt_white"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="600.0px"
            android:layout_height="2.0px"
            android:layout_marginTop="5.0dip"
            android:background="@color/white"/>

        <TextView
            android:id="@id/tv_get"
            android:layout_width="300.0px"
            android:layout_height="120.0px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52.0px"
            android:background="@drawable/shape_reg_btn_bg"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="获取验证码"
            android:textColor="@color/txt_white"
            android:textSize="30.0px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="495.0px"
        android:layout_height="78.0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400.0px"
        android:gravity="center"
        android:text="在您申请注册BAZAAR IN用户时,\n 即视为您不仅完全同意BAZAAR IN使用须知,\n 而且知悉且同意本注册用户特别须知。"
        android:textColor="@color/txt_white"
        android:textSize="22.0px"/>
</com.zhy.autolayout.AutoLinearLayout>