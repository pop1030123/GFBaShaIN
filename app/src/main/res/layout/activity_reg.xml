<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent"
                                     android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_title_back"
            android:layout_width="120.0px"
            android:layout_height="120.0px"
            android:baselineAlignBottom="true"
            android:padding="10.0dip"
            android:src="@mipmap/title_back_icon"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="280.0px"
        android:layout_height="280.0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48.0px"
        android:layout_marginTop="48.0px"
        android:src="@mipmap/bazaar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20.0dip">

        <TextView
            android:id="@id/tv_tips"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_white"
            android:textSize="30.0px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.0px"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="15.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <EditText
                    android:id="@id/et_code"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入验证码"
                    android:textColor="@color/txt_white"
                    android:textColorHint="@color/txt_white"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.0px"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/white"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_add_bg"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="5.0dip"
                android:text="重发验证码"
                android:textColor="@color/txt_white"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@id/ll_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.0px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/txt_white"
                android:textSize="35.0px"/>

            <View
                android:id="@id/v_divide"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="44.0px"
                android:layout_marginRight="18.0px"
                android:background="@color/txt_white"/>

            <EditText
                android:id="@id/et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入密码"
                android:textColor="@color/txt_white"
                android:textColorHint="@color/txt_white"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@id/line_pwd"
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_marginTop="5.0dip"
            android:background="@color/white"/>

        <TextView
            android:id="@id/tv_reg"
            android:layout_width="300.0px"
            android:layout_height="120.0px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52.0px"
            android:background="@drawable/shape_reg_btn_bg"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="注册"
            android:textColor="@color/txt_white"
            android:textSize="30.0px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="在您申请注册BAZAAR IN用户时,\n 即视为您不仅完全同意BAZAAR IN使用须知,\n 而且知悉且同意本注册用户特别须知。"
        android:textColor="@color/txt_white"
        android:textSize="22.0px"/>
</com.zhy.autolayout.AutoLinearLayout>