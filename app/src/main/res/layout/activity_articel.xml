<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@id/main_content"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="fill_parent"
                                                 android:layout_height="fill_parent"
                                                 android:background="@color/txt_white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:orientation="vertical"
        app:elevation="0.0dip">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@id/collapsing_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:contentScrim="@color/txt_white"
            app:expandedTitleMarginEnd="64.0dip"
            app:expandedTitleMarginStart="48.0dip"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/iv_icon"
                    android:layout_width="750.0px"
                    android:layout_height="525.0px"
                    android:scaleType="centerInside"
                    android:src="@mipmap/item_default"/>

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="525.0px"
                    android:paddingBottom="10.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:paddingTop="10.0dip"
                    android:textColor="@color/txt_cobalt_blue"
                    android:textSize="36.0px"/>
            </com.zhy.autolayout.AutoFrameLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip"
            android:visibility="gone"
            app:layout_collapseMode="pin">

            <ImageView
                android:id="@id/iv_avatar"
                android:layout_width="94.0px"
                android:layout_height="94.0px"
                android:layout_gravity="center"
                android:src="@mipmap/title_user_icon"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kwan"
                        android:textColor="@color/txt_cobalt_blue"
                        android:textSize="24.0px"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@id/iv_isVip"
                        android:layout_width="30.0px"
                        android:layout_height="30.0px"
                        android:layout_marginLeft="5.0dip"
                        android:src="@mipmap/vip_icon"/>

                    <TextView
                        android:id="@id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.0px"
                        android:textColor="#ff8c8c99"
                        android:textSize="22.0px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="2.0dip"
                    android:text="大人"
                    android:textSize="12.0px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@id/tv_chat"
                android:layout_width="130.0px"
                android:layout_height="60.0px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/shape_around_gray_stroke"
                android:gravity="center"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="5.0dip"
                android:text="聊一聊"
                android:textColor="@color/txt_cobalt_blue"
                android:textSize="24.0px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@id/ns_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/txt_white"
        android:descendantFocusability="blocksDescendants"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@id/ll_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/txt_white"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.tencent.smtt.sdk.WebView
                android:id="@id/webView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@id/ll_commentandrelate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10.0dip">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="73.0px"
                        android:background="@mipmap/info_head"
                        android:gravity="center"
                        android:text="相关阅读"
                        android:textColor="@color/txt_cobalt_blue"
                        android:textSize="30.0px"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@color/fleshColor"
                        android:visibility="gone"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.kwan.base.widget.observablescrollview.ObservableRecyclerView
                    android:id="@id/rv_relate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2.0">

                    <TextView
                        android:id="@id/tv_newcomment"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:text="最新评论"
                        android:textSize="30.0px"/>

                    <TextView
                        android:id="@id/tv_hotcomment"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/divider_color"
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:text="最热评论"
                        android:textSize="30.0px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@id/tv_comment_tag"
                    android:layout_width="fill_parent"
                    android:layout_height="73.0px"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@mipmap/info_head"
                    android:gravity="center"
                    android:text="用户评论"
                    android:textColor="@color/txt_cobalt_blue"
                    android:textSize="30.0px"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <com.kwan.base.widget.observablescrollview.ObservableRecyclerView
                    android:id="@id/rv_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                <TextView
                    android:id="@id/tv_send"
                    android:layout_width="700.0px"
                    android:layout_height="90.0px"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20.0px"
                    android:layout_marginTop="60.0px"
                    android:background="@color/bar_grey"
                    android:gravity="center"
                    android:text="发表评论"
                    android:textColor="@color/txt_white"
                    android:textSize="16.0sp"
                    android:textStyle="bold"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@id/fl_load"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <pl.droidsonroids.gif.GifImageView
            android:id="@id/iv_load"
            android:layout_width="fill_parent"
            android:layout_height="100.0px"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/load"/>
    </com.zhy.autolayout.AutoFrameLayout>
</android.support.design.widget.CoordinatorLayout>